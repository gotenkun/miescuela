<?xml version="1.0"?>
<configuration>
    <system.web>
        <authorization>
            <deny users="?" />
        </authorization>
      <httpRuntime requestValidationMode="2.0" />
    </system.web>
  <location path="Ajustes/Configurar-Recetas.aspx">
    <system.web>
      <httpRuntime requestValidationMode="2.0" />
    </system.web>
  </location>
    <location path="Admin.aspx">
        <system.web>
            <authorization>
                <allow roles="ADCUAdmin,InstitucionAdmin"/>
            </authorization>
        </system.web>
    </location>
    <location path="publicar.aspx">
        <system.web>
            <authorization>
                <allow roles="ADCUAdmin"/>
                <deny roles="Jugador,Consulta,TorneoAdmin,Arbitro,InstitucionAdmin"></deny>
            </authorization>
        </system.web>
    </location>
    <location path="ChangePassword.aspx">
        <system.web>
            <authorization>
                <deny users="*" />
            </authorization>
        </system.web>
    </location>
    <location path="ChangePasswordGeneral.aspx">
        <system.web>
            <authorization>
                <allow roles="ADCUAdmin,InstitucionAdmin"/>
                <deny roles="Jugador,Consulta,TorneoAdmin,Arbitro"></deny>
            </authorization>
        </system.web>
    </location>
   
    <location path="DefaultGeneral.aspx">
        <system.web>
            <authorization>
                <allow roles="ADCUAdmin,InstitucionAdmin,Consulta,TorneoAdmin"/>
                <deny roles="Jugador,Arbitro"></deny>
            </authorization>
        </system.web>
    </location>
<location path="TorneosAbiertos.aspx">
        <system.web>
            <authorization>
                <allow users="*" />
            </authorization>
        </system.web>
    </location>
	<location path="UnauthorizedAccess.aspx">
        <system.web>
            <authorization>
                <allow users="*"/>
            </authorization>
        </system.web>
    </location>
</configuration>
